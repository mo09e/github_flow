<!DOCTYPE html>
<html>
  <head>
    <title>FaceBookClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="sticky-top">
      <div calss="header_layout">
        <!-- <p class="logo">FaceBookClone</p> -->
        <h3><span class="label label-default logo"ã€€id="logo-link"><%= link_to "FaceBookClone", new_session_path %></span></h3>
        <p class="header_menu">
          <% if logged_in? %>
            <%= link_to "Profile", user_path(current_user.id) %>
            <%= link_to "Blog List", blogs_path(current_user.id) %>
            <%= link_to "Logout", session_path(current_user.id), method: :delete %>
          <% else %>
            <%= link_to "Sign up", new_user_path %>
            <%= link_to "Login", new_session_path %>
          <% end %>
        </p>
        <p id="notice"><%= notice %></p>
      </div>
    </header>
    <%= yield %>
    <footer class="fixed-bottom">
      <p>2020.08 Hello world!</p>
    </footer>
  </body>
</html>
